@model _3_23hmwk.Image
@{
    ViewData["Title"] = "ViewImageRequest";
}

<div class="row">
    <div class="col-md-6 offset-md-3 jumbotron" id="div">
        <h4>Please enter the password for this image:</h4>
        <form method="post" id="form">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="password" class="form-control" placeholder="Password" name="password" id="password"/>
            <br />
            <button class="btn btn-primary" id="submit" data-password="@Model.Password">Submit</button>
        </form>
    </div>
</div>
